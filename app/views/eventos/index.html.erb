<div class="container-fluid">
  <p style="color: green">
    <%#= notice %>
  </p>

  <h1>Eventos</h1>

  <div id="eventos">
    <div class="row">
      <% @eventos.each do |evento| %>
        <div class="col-12">
            <div class="card mb-3">
              <div class="card-body">
                <div class="row align-items-center">
                  <div class="col-3 col-sm-6 col-md-6 col-lg-6">
                    <h5 class="card-title">
                      <%= evento.nome_evento %>
                    </h5>
                    <p class="card-text">R$ <%= number_with_precision(evento.valor_total, precision: 2) %></p>
                  </div>
                  
                  <div class="col-3 col-sm-3 col-md-3 col-lg-3">
                    <p class="card-text">
                      <strong>Data:</strong> <%= formatar_data_br(evento.data_inicio) %>
                      <br>
                      <strong>In√≠cio:</strong> <%= formatar_hora_br(evento.hora_inicio) %>
                    </p>
                  </div>
                  
                  <div class="col-3 col-sm-3 col-md-3 col-lg-3 d-flex justify-content-end">
                    <p class="card-text text-primary">
                      <%= link_to evento, class: 'nav-link' do %>
                        <i class="bi bi-link-45deg"></i>
                        Detalhes
                      <% end %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  </div>

  <%= button_to new_evento_path, method: :get, class: 'nav-link floating-button fs-4 bg-dark rounded-circle' do %>
    <i class="bi bi-plus-lg text-white"></i>
  <% end %>

</div>